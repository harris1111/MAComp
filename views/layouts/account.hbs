</head>

<body>
    <header>
        <div class="header-main sticky-nav">
            <nav class="navbar navbar-light navbar-expand-xl position-relative">
                <div class="container-fluid">
                    <a class="navbar-brand d-flex align-self-center header-logo align-items-center" href="/">
                        <img src="https://bn1304files.storage.live.com/y4mo60LDVzMImPSFS4cf4YMf-267Uf-0mec0vtjA9OLUdCVgSomB3ET6vynLHQTrqTmFks5KatMyRqELd5aMJSV1rYA55F_jQpYe0mbJAFPf10Y-HqiI2rCn0OiGIsjRDX9BZqbNa84IDwYFERLgfVBOvRTtncrCtb_6jXkZOEzgaIqvpPyFM5vnfYUcHrvwjr8LUid3mC2neGFU6d3w4ETqQ/Beige%20Vintage%20Circular%20Music%20Logo%20%281%29.png?psid=1&width=1920&height=325"
                            alt="logo">
                        <p class="fw-bold fs-2 text-light"><span class="fs-2">MA</span>Computer</p>
                    </a>
                    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar"
                        aria-labelledby="offcanvasNavbarLabel">
                        <div class="offcanvas-header text-end">
                            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"
                                aria-label="Close"></button>
                        </div>
                        <div class="offcanvas-body main-menu navbar-collapse px-3">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item dropdown">
                                    <a class="main-menu-link dropdown-toggle" href="#"
                                        data-bs-toggle="dropdown">Category
                                    </a>
                                    <ul class="dropdown-menu">
                                        {{#each lcCategories}}
                                        <li><a class="dropdown-item"
                                                href="/product/byBigCat/{{BigCatID}}">{{BigCatName}}</a>
                                            <ul class="submenu dropdown-menu">
                                                {{#each childCat}}
                                                <li><a class="dropdown-item"
                                                        href="/product/byCat/{{CatID}}">{{CatName}}</a>
                                                </li>
                                                {{/each}}
                                            </ul>
                                        </li>
                                        {{/each}}
                                    </ul>
                                </li>
                                {{#if auth}}
                                <li class="nav-item">
                                    <a href="/account/order" class="main-menu-link">Account</a>
                                </li>
                                {{#if isAdmin}}
                                <li class="nav-item">
                                    <a class="main-menu-link" href="/admin/order">Admin</a>
                                </li>
                                {{/if}}
                                {{/if}}
                            </ul>
                        </div>
                    </div>
                    <div class="d-flex">
                        <div class="align-self-center d-flex justify-content-center">
                            <div class="header-actions">
                                {{#if auth}}
                                <a href="/account/cart"
                                    class="header-action-btn header-action-btn-cart pr-0 text-light">
                                    <i class="pe-7s-shopbag"></i>
                                    {{#if cartSum}}
                                    <span
                                        class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-light">
                                        {{cartSum}}
                                    </span>
                                    {{/if}}
                                </a>
                                <span class="text-light">Hello, {{authUser.Name}} </span> {{/if}}
                                {{#if auth}}
                                <form id="formLogout" action="/logout" method="post"></form>
                                <a class="py-2 hover:bg-cyan-900 w-full text-left pl-lg-3"
                                    href="javascript: $('#formLogout').submit();">
                                    Log out
                                </a>
                                {{else}}
                                <a href="/login">Sign In</a>
                                {{/if}}
                            </div>
                        </div>
                        <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas"
                            data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                            <span class="navbar-toggler-icon"><i class="fa fa-bars"></i></span>
                        </button>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <div class="admin">
        <div class="container py-5 height-full admin__content">
            <div x-data="{ sidebarOpen: false }" class="row">
                <div class="col-12 col-lg-3">
                    <nav>
                        <a class="admin__item
                            {{#if oActive}}
                                admin__item-active
                            {{/if}}" href="/account/order">
                            <i class="fa fa-cart-arrow-down"></i>
                            Orders
                        </a>

                        <a class="admin__item
                            {{#if iActive}}
                                admin__item-active
                            {{/if}}" href="/account/information">
                            <i class="fa fa-archive"></i>
                            Information
                        </a>

                        <a class="admin__item
                            {{#if aActive}}
                                admin__item-active
                            {{/if}}" href="/account/address">
                            <i class="fa fa-user"></i>
                            Address
                        </a>

                        <a class="admin__item
                            {{#if cActive}}
                                admin__item-active
                            {{/if}}" href="/account/changePass">
                            <i class="fa fa-user"></i>
                            Change Password
                        </a>

                    </nav>
                </div>
                <div class="col-12 col-lg-9 pt-5 pt-lg-0">
                    {{{body}}}
                </div>
            </div>

        </div>
    </div>


    <div class="footer-area">

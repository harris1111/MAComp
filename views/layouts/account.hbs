                                    <img src="https://bn1304files.storage.live.com/y4mo60LDVzMImPSFS4cf4YMf-267Uf-0mec0vtjA9OLUdCVgSomB3ET6vynLHQTrqTmFks5KatMyRqELd5aMJSV1rYA55F_jQpYe0mbJAFPf10Y-HqiI2rCn0OiGIsjRDX9BZqbNa84IDwYFERLgfVBOvRTtncrCtb_6jXkZOEzgaIqvpPyFM5vnfYUcHrvwjr8LUid3mC2neGFU6d3w4ETqQ/Beige%20Vintage%20Circular%20Music%20Logo%20%281%29.png?psid=1&width=1920&height=325"
                                        alt="logo">
                                    <p class="fw-bold fs-2 text-light"><span class="fs-2">MA</span>Computer</p>

                                </div>
                            </div>
                        </div>
                        <!-- End single blog -->
                        <!-- Start single blog -->
                        <div class="col-12 col-md-3 col-sm-6 col-lg-3 mb-md-30px mb-lm-30px pl-lg-50px">
                            <div class="single-wedge">
                                <h4 class="footer-herading">Quick Links</h4>
                                <div class="footer-links">
                                    <div class="footer-row">
                                        <ul class="align-items-center">
                                            <li class="li"><a class="single-link" href="#" target="_blank">About</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End single blog -->
                        <!-- Start single blog -->
                        <div class="col-12 col-sm-6 col-md-3 col-lg-3 mb-lm-30px pl-lg-50px">
                            <div class="single-wedge">
                                <h4 class="footer-herading">Company</h4>
                                <div class="footer-links">
                                    <div class="footer-row">
                                        <ul class="align-items-center">
                                            <li class="li"><a class="single-link" href="/">MAComputer</a>
                                            </li>
                                            <li class="li"><a class="single-link" href="/login">Log in</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End single blog -->
                        <!-- Start single blog -->
                        <div class="col-6 col-md-4 col-lg-3 ">
                            <div class="single-wedge">
                                <h4 class="footer-herading">Store Information.</h4>
                                <div class="footer-links">
                                    <!-- News letter area -->
                                    <p class="address">227 Nguyen Van Cu, Ward 4, District 5, Ho Chi Minh city</p>
                                    <!-- News letter area  End -->
